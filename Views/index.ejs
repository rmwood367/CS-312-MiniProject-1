<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="bg-primary text-white text-center py-4">
        <h1>Ryan's Blog</h1>
    </header>

    <div class="container mt-4">
        <a href="/posts" class="btn btn-primary mb-3">Create a Post</a>

        <% posts.forEach(function(post, index) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.content %></p>
                    <p class="text-muted">By: <%= post.author %> on <%= post.createdAt.toLocaleDateString() %></p>
                    <a href="/posts/edit/<%= index %>" class="btn btn-success">Edit</a>
                    <form action="/posts/delete/<%= index %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>

    <footer class="bg-primary text-white text-center py-3">
        &copy; Mini Project 1 Blog 
    </footer>
</body>
</html>
